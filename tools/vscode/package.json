{
	"name": "canfly",
	"displayName": "canfly",
	"description": "CanFly application development tools",
  "publisher": "kotuku",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.46.0",
		"vscode-nls": "^5.0.0"
	},
  "author": {
    "name" : "Kotuku Aerospace Limited"
  },
	"license": "MIT",
  "repository": {
		"type": "git",
		"url": "https://github.com/kotuku-aero/diy-efis"
	},
	"categories": [
		"Debuggers",
		"Programming Languages"
	],
	"activationEvents": [
		"onCommand:extension.canfly.configureEmulator",
		"onCommand:extension.canfly.startSession"
	],
	"main": "./out/extension.js",
	"dependencies": {
		"vscode-debugprotocol": "^1.42.0",
		"vscode-nls": "^5.0.0"
	},
	"contributes": {
		"commands": [
			{
				"command": "canfly.configureEmulator",
				"title": "Configure Emulator"
			},
			{
				"command": "canfly.initializeConfig",
				"title": "Create new configuration database"
			},
			{
				"command": "canfly.connectCanFly",
				"title": "Connect the emulator to a serial adapter"
			}
		],
		"breakpoints": [
			{
				"language": "csharp"
			}
		],
		"debuggers": [
			{
				"type": "canfly",
				"program": "${extension.canfly.emulator}",
        "args": [
          "-x ${extension.canfly.screen-x}",
          "-y ${extension.canfly.screen-y}",
          "-f ${extension.canfly.flash-path}",
          "-p ${extension.canfly.port}",
          "${extension.canfly.config-path}"
        ]
			}
		],
		"configuration": [
			{
				"title": "CanFly",
				"properties": {
					"canfly.enable": {
						"type": "boolean",
						"default": true,
						"description": "Enable the CanFly Extension"
					},
          "canfly.emulator": {
            "type": "string",
            "default": "$HOME/framework/emulator/msh.exe",
            "description": "Relative path to the emulator"
          },
					"canfly.screen-x": {
						"type": "number",
						"default": 320,
						"description": "Width of the emulator screen"
					},
					"canfly.screen-y": {
						"type": "number",
						"default": 240,
						"description": "Hight of the emulator screen"
					},
					"canfly.num-spin": {
						"type": "number",
						"default": 1,
						"description": "Number of spin buttons to emulate, max 2"
					},
					"canfly.num-action": {
						"type": "number",
						"default": 1,
						"description": "Number of action buttons to emulate, max 6"
					},
					"canfly.flash-path": {
						"type": "string",
						"default": "$HOME/framework/emulator/flash",
						"description": "Folder for the emulated flash file system, all generated apps are placed here"
					},
					"canfly.config-path": {
						"type": "string",
						"default": "$HOME/framework/emulator/diy-efis.cdb",
						"description": "Path to the configuration database"
					},
					"canfly.port": {
						"type": "string",
						"default": "4711",
						"description": "TCP port to connect to"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.19.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"vsce": "^1.81.1",
		"typescript": "^4.1.3",
		"vscode-nls-dev": "^3.3.2",
		"vscode-test": "^1.5.0"
	}
}
