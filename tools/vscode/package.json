{
	"name": "canfly",
	"displayName": "canfly",
	"description": "CanFly application development tools",
  "publisher": "kotuku",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.46.0",
		"vscode-nls": "^5.0.0"
	},
  "author": {
    "name" : "Kotuku Aerospace Limited"
  },
	"license": "MIT",
  "repository": {
		"type": "git",
		"url": "https://github.com/kotuku-aero/diy-efis"
	},
  "icon" : "images/LogoSq.png",
	"categories": [
		"Debuggers",
		"Programming Languages"
	],
	"activationEvents": [
    "*",
		"onCommand:extension.canfly.configureEmulator",
		"onCommand:extension.canfly.startSession"
	],
	"main": "./out/extension.js",
	"dependencies": {
		"vscode-debugprotocol": "^1.42.0",
		"vscode-nls": "^5.0.0"
	},
	"contributes": {
		"commands": [
			{
				"command": "canfly.configureEmulator",
				"title": "Configure Emulator"
			},
			{
				"command": "canfly.initializeConfig",
				"title": "Create new configuration database"
			},
			{
				"command": "canfly.connectCanFly",
				"title": "Connect the emulator to a serial adapter"
			}
		],
		"breakpoints": [
			{
				"language": "csharp"
			}
		],
		"debuggers": [
      {
        "type": "canfly",
        "label": "Kotuku Emulator",
        "configurationAttributes": {
          "attach": {
						"required": [
							"port"
						],
						"properties": {
							"port": {
								"type": "number",
								"description": "%canfly.attach.port.description%",
								"default": 4711
							},
							"address": {
								"type": "string",
								"description": "%canfly.attach.address.description%",
								"default": "undefined"
							}
            }
          }
        },
        "initialConfigurations": [
          {
						"name": "%canfly.attach.config.name%",
						"type": "canfly",
						"request": "attach",
						"address": "localhost",
						"port": 4711
          }
        ]
      },
      {
				"type": "canfly.mfd3",
        "label": "Kotuku MFD3 Emulator",
        "program" : "./out/msh.exe",
        "args": [
          "-x 320 ",
          "-y 240 ",
          "diy-efis.cdb"
        ],
        "configurationAttributes": {
          "launch": {
            "required": ["application", "fs_path" ],
            "properties": 
            {
              "application": {
                "type": "string",
                "description": "%canfly.launch.program.description%",
                "default": "${command:AskForProgramName}"
              },
              "fs_path": {
                "type": "string",
                "description": "%canfly.launch.fs_path.description%",
                "default": "${workspaceFolder}/emulator/fs"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "%canfly.launch.stop.description%",
                "default": true
              }
            }
         }
        },
        "initialConfigurations": [
          {
            "name": "canfly.launch.mfd3.config.name",
            "type": "canfly.mfd3",
            "request": "launch",
            "application": "${command:AskForProgramName}",
            "stopOnEntry": true
          }
        ]
			},
      {
				"type": "canfly.mfd5",
        "label": "Kotuku MFD5 Emulator",
        "program" : "./out/msh.exe",
        "args": [
          "-x 800 ",
          "-y 480 ",
          "diy-efis.cdb"
        ],
        "configurationAttributes": {
          "launch": {
            "required": ["application", "fs_path" ],
            "properties": 
            {
              "application": {
                "type": "string",
                "description": "%canfly.launch.program.description%",
                "default": "${command:AskForProgramName}"
              },
              "fs_path": {
                "type": "string",
                "description": "%canfly.launch.fs_path.description%",
                "default": "${workspaceFolder}/emulator/fs"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "%canfly.launch.stop.description%",
                "default": true
              }
            }
         }
        },
        "initialConfigurations": [
          {
            "name": "canfly.launch.mfd5.config.name",
            "type": "canfly.mfd5",
            "request": "launch",
            "application": "${command:AskForProgramName}",
            "stopOnEntry": true
          }
        ]
			},
      {
				"type": "canfly.mfd10",
        "label": "Kotuku MFD10 Emulator",
        "program" : "./out/msh.exe",
        "args": [
          "-x 1024 ",
          "-y 600 ",
          "diy-efis.cdb"
        ],
        "configurationAttributes": {
          "launch": {
            "required": ["application", "fs_path" ],
            "properties": 
            {
              "application": {
                "type": "string",
                "description": "%canfly.launch.program.description%",
                "default": "${command:AskForProgramName}"
              },
              "fs_path": {
                "type": "string",
                "description": "%canfly.launch.fs_path.description%",
                "default": "${workspaceFolder}/emulator/fs"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "%canfly.launch.stop.description%",
                "default": true
              }
            }
         }
        },
        "initialConfigurations": [
          {
            "name": "canfly.launch.mfd10.config.name",
            "type": "canfly.mfd10",
            "request": "launch",
            "application": "${command:AskForProgramName}",
            "stopOnEntry": true
          }
        ]
			}
		]
 	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.19.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"vsce": "^1.81.1",
		"typescript": "^4.1.3",
		"vscode-nls-dev": "^3.3.2",
		"vscode-test": "^1.5.0"
	}
}
